docker run -d --name novnc-debian -p 5900:5900 -p 6080:6080 debian:bookworm-slim tail -f /dev/null





docker exec -it novnc-debian bash









apt-get install -y xfce4 xfce4-goodies x11vnc novnc websockify




apt-get install -y xvfb x11vnc xfce4 xfce4-goodies novnc websockify









Xvfb :1 -screen 0 1024x768x16 &
export DISPLAY=:1
xfce4-session &
x11vnc -display :1 -nopw -forever -shared &









apt-get install -y git
cd /usr/share
git clone https://github.com/novnc/noVNC.git
cd noVNC
./utils/novnc_proxy --vnc localhost:5900 --listen 6080







apt-get update
apt-get install -y dbus-x11




startxfce4 &




